{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="articles">

    {% for article in articles %}

        <article class="my-4">
            <h2>
                {{article.title}}
            </h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/y') }} Ã  {{article.createdAt | date('H:i')}} dans la categorie Recette
        </div>
        <div class="content"><img src="{{ article.image }}" alt="">
           <p> {{ article.content }} </p>
            <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite.</a>
        </div>
        </article>

     {% endfor %}





</section>
{% endblock %}
